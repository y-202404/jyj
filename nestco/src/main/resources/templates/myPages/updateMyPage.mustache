{{>layouts/header}}
<link rel="stylesheet" href="/css/myPageForm.css">
<!-- 다음 우편번호 서비스 스크립트 -->
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

{{#member}}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="card mt-5">
                    <h4 class="text-left title">{{username}}님! 정보를 수정하시고 아래의 저장버튼을 눌러주세요</h4>
                        <div class="card-body">
                        <div class="mb-3">
                            <input type="hidden" id="userId" value="{{userId}}">
                            <input type="hidden" id="userPassword" value="null">
                            <input type="hidden" id="userName" value="{{username}}">
                            <label class="form-label" for="nickName">나의 별명</label>
                            <input type="text" id="nickName" class="form-control" name="nickName" value="{{nickname}}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="phoneNumber">전화번호</label>
                            <input type="text" id="phoneNumber" class="form-control" name="phoneNumber" value="{{phoneNumber}}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="email">이메일</label>
                            <input type="text" id="email" class="form-control" name="email" value="{{email}}" required>
                        </div>

    <!--                        //            이름-username, 별명-nickname, 전화번호-phoneumber, 이메일-email -->
    <!--                        //            우편주소-postaladdress, 주소-address, 세부주소-detailedaddress -->

                        <div class="mb-3">
                            <input class="form-control inline" type="text" id="sample6_postcode" name="postalAddress" value="{{postalAddress}}" readonly required>
                            <input class="btn btn-primary" onclick="sample6_execDaumPostcode()" value="주소 검색"><br>
                            <input class="form-control inline" type="text" id="sample6_address" name="address" value="{{address}}" readonly required><br>
                            <input class="form-control inline" type="text" id="sample6_detailAddress" name="detailedAddress" value="{{detailedAddress}}" required>
<!--                                참고 항목은 필요 없어서 하이드 -->
                            <input style="display: none" type="text" id="sample6_extraAddress" placeholder="참고항목">
                        </div>

                        <button class="btn btn-primary" id="update_identity">변경사항 저장</button>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-12">
                <div class="card mt-5" style="height: 334px;">
                    <div class="card-body inputImg" id="profileImg">
                        <img    class="profileImg Img"
                                id="profile_img"
                                style="object-fit: cover; width: 100%; height: auto; max-height: 100%;"
                                alt="프로필 사진"
                                data-userId = "{{userId}}"
                        >
                        <input type="file" id="image_input" accept="image/*" style="display: none;">
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/member}}

<!-- 자바 스크립트를 작성한 외부파일 참조 -->
<script src="/js/mypage.js" defer></script>
{{>layouts/footer}}

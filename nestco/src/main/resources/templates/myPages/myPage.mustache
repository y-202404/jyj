<!-- 개인정보 표시 컨테이너 -->
{{#member}}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="card mt-5">
                    <h3 class="text-left title">안녕하세요 "{{username}}"님!</h3>
                    <div class="card-body" style="height: 270px;">
                        <div class="mb-3">
                            <label class="form-label">나의 별명 : {{nickname}}</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">전화번호 : {{phoneNumber}}</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">E-Mail : {{email}}</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Address : {{address}} {{detailedAddress}}</label>
                        </div>
                        <div class="buttons">
                            <a href="/updateMyPage" class="btn btn-primary">내 정보 변경</a>
                            <div class="moving-button">
                                <!-- 관심물품으로 이동 -->
                                <button class="btn btn-primary" onclick="scrollToPosition(460)" id="goToWatchlist">관심물품</button>
                                <!-- 내 게시글로 이동 -->
                                <button class="btn btn-primary" onclick="scrollToPosition(1020)" id="goToMyPost">내 게시글</button>
                                <!-- 교환물품으로 이동 -->
                                <button class="btn btn-primary" onclick="scrollToPosition(1394.5)" id="goToXchgItems">교환물품</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-12">
                <div class="card mt-5" style="height: 334px;">
                    <div class="card-body" id="profileImg">
                        <img
                                class="profileImg Img"
                                style="object-fit: cover; width: 100%; height: auto; max-height: 100%;"
                                alt="프로필 사진"
                                data-userId = "{{userId}}"
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/member}}

